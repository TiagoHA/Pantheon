{
  "name": "panteon-server",
  "version": "0.1.0",
  "author": "LFSCamargo",
  "dependencies": {
    "apollo-server": "2.2.2",
    "bcryptjs": "2.4.3",
    "graphql": "0.13.2",
    "graphql-tag": "2.10.0",
    "jsonwebtoken": "8.4.0",
    "mongoose": "5.3.13",
    "ts-node": "7.0.1",
    "typescript": "3.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/graphql": "14.0.3",
    "@types/jsonwebtoken": "8.3.0",
    "@types/mongoose": "5.3.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "1.18.6",
    "prettier": "^1.15.3",
    "tslint": "5.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "main": "src/server.ts",
  "prettier": {
    "parser": "typescript",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "private": true,
  "scripts": {
    "docker:up": ".docker/docker-compose up --build",
    "start": "ts-node",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts"
  },
  "tsconfig": {
    "compilerOptions": {
      "lib": [
        "es2015"
      ]
    }
  }
}
